<Window x:Class="DataWriter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="0">
        <Grid Margin="10,10,0,9.8" Background="Red" HorizontalAlignment="Left" Width="255"/>
        <Grid Margin="0,10,10.4,9.8" Background="#FF002DFF" HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.5" Width="218">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
        </Grid>
    </Grid>

</Window>
